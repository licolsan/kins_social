<!DOCTYPE html>
<html>
  <head>
    <title>KinsSocial</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= filestack_js_include_tag %>
    <%= filestack_js_init_tag %> 
    <style>
    	body {
    		background-color: <%= current_user.color if current_user %>;
    	}
    </style>
  </head>

  <body>
	  <% if flash[:notice] %>
	  	<%= flash[:notice] %>
	  <% end %>
	  <% if current_user %>
	  	<ul>
	  		<li>Log in as <%= current_user.name %></li>
	  		<li><%= link_to 'Edit profile', edit_user_path(current_user) %></li>
	  		<li><%= link_to 'My friend(s)', friend_ships_path %></li>
	  		<li><%= link_to 'Users', users_path %></li>
	  		<li><%= link_to 'Log out', log_out_path, :method => :delete %></li>
	  	</ul>
	  <% end %>
    <%= yield %>
  </body>
</html>
