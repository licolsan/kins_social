<center><label><h1>Log In Page</h1></label></center>
<%= form_for :sess, url: 'login' do |f| %>
<center>
    	<%= link_to 'Log in with Facecbook', 'auth/facebook', class: "loginBtn loginBtn--facebook"%>
	    <%= link_to 'Log in with G+', 'auth/google_oauth2', class: "loginBtn loginBtn--google" %>
</center>
<br><hr>
     <center><h4>Hoáº·c</h4></center>

<div class="container">
	<div class="field">
			<label><b>Email</b></label>
