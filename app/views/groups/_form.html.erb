<div align="center">
	<div>
		<%= form_for @group do |f| %>
			<% if @group.errors.any? %>
				<% @group.errors.full_messages.each do |mess| %>
					<%= mess %>
				<% end %>
			<% end %>
			<div class="input-group input_group">
				<label class="col-xs-4">Group name</label>
				<div class="col-xs-8">
					<%= f.text_field :name, placeholder: "Enter youur group name", required: true, class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-xs-4">Group avatar</label>
				<div class="col-xs-8">
					<%= f.file_field :avatar, class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-xs-4">Group cover photo</label>
				<div class="col-xs-8">
					<%= f.file_field :cover_photo, class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-xs-4">Group type</label>
				<div class="col-xs-8">
					<%= f.text_field :group_type, placeholder: "Enter your group type", required: true, class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-xs-4">Group description</label>
				<div class="col-xs-8">
					<%= f.text_area :description, placeholder: "Enter your description", class: "form-control" %><br/><br/>
				</div>
			</div>
			<%= f.submit class: "btn btn-success" %>
		<% end %>
	</div>
</div>