<div class="container">
	<h2>All Groups</h2>
	<% if @groups %>
		<% @groups.each do |group| %>
			<div class="row user_list">
				<div class="col-xs-1">
					<%= cl_image_tag group.avatar, alt: "group_avatar", class: "group_avatar" %>
				</div>
				<div class="col-xs-2">
					<%= link_to group.name, group_path(group) %>
				</div>
			</div>
		<% end %>
	<% end %>
</div>