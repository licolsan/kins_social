<div class="cover_photo">
	<img src="<%= @user.cover_photo %>" alt="cover_photo" />
</div>
<table>
	<tr>
		<td>
			<div class="avatar">
				<img src="<%= @user.avatar %>" alt="avatar" class="img-circle" />
			</div>
		</td>
		<td>
			<h3><%= @user.name %></h3>
		</td>
	</tr>
</table>

<div align="center">
	<div>
		<%= form_for @user do |f| %>
			<% if @user.errors.any? %>
				<% @user.errors.full_messages.each do |mess| %>
					<%= mess %>
				<% end %>
			<% end %>
			<div class="input-group input_group">
				<label class="col-lg-2">Name</label>
				<div class="col-lg-10">
					<%= f.text_field :name, required: true, class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-lg-2">Avatar</label>
				<div class="col-lg-10">
					<%= f.filestack_field :avatar, 'Upload your avatar', class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-lg-2">Cover photo</label>
				<div class="col-lg-10">
					<%= f.filestack_field :cover_photo, 'Upload your cover photo', class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-lg-2">Color</label>
				<div class="col-lg-10">
					<%= f.color_field :color, class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-lg-2">Email</label>
				<div class="col-lg-10">
					<%= f.email_field :email, required: true, class: "form-control" %><br/><br/>
				</div>
			</div>
			<%= f.submit "Update Profile", class: "btn btn-primary update_profile" %>
		<% end %>
	</div>
</div>