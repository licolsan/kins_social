<h1>Your profile</h1>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<% @user.errors.full_messages.each do |mess| %>
			<%= mess %>
		<% end %>
	<% end %>
	<table>
		<tr>
			<td>Name: </td>
			<td><%= f.text_field :name, required: true %></td>
		</tr>
		<tr>
			<td>Avatar: </td>
			<td>
				<div style="width: 300px; height: 200px">
					<img src="<%= @user.avatar %>" alt="your_avatar" style="width: 100%; height: 100%" />
				</div>
			</td>
		</tr>
		<tr>
			<td></td>
			<td><%= f.filestack_field :avatar, 'Upload your avatar' %></td>
		</tr>
		<tr>
			<td>Cover photo: </td>
			<td>
				<div style="width: 300px; height: 200px">
					<img src="<%= @user.cover_photo %>" alt="your_cover_photo" style="width: 100%; height: 100%" />
				</div>
			</td>
		</tr>
		<tr>
			<td></td>
			<td><%= f.filestack_field :cover_photo, 'Upload your cover photo' %></td>
		</tr>
		<tr>
			<td>Color: </td>
			<td><%= f.color_field :color %></td>
		</tr>
		<tr>
			<td>Email: </td>
			<td><%= f.email_field :email, required: true %></td>
		</tr>
		
		<tr>
			<td></td>
			<td><%= f.submit "Update Profile" %></td>
		</tr>
	</table>
<% end %>