<% content_for :head do %>
  <div class="cover_photo">
  <img src="<%= current_user.cover_photo %>" alt="cover_photo" />
  </div>
  <div class="row">
    <div class="col-sm-12" style="background-color: white;">
      <div class="container">
        <div class="row">
          <div class="col-sm-3">&nbsp;</div>
          <div class="col-sm-6" style="margin-top: 5px;" align="right">
            <div class="row">
              <div class="col-sm-2" style="font-size: 100%; opacity: 0.7;">
                POSTS<br>
                <h6 style="color: #0084B4; font-size: 150%;"><%= current_user.posts.count %></h6>
              </div>
              <div class="col-sm-2" style="font-size: 100%; opacity: 0.7;">
                FOLLOWERS<br>
                <h6 style="color: #0084B4; font-size: 150%;"><%= current_user.followers.count %></h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <table>
    <tr>
      <td>
        <div class="avatar">
          <img src="<%= current_user.avatar %>" alt="avatar" class="img-circle" />
        </div>
      </td>
      <td>
        <div class="avatar_name">
          <h3><%= current_user.name %></h3>
        </div>
      </td>
    </tr>
  </table>
<% end %>

<div align="center">
	<div>
		<%= form_for current_user do |f| %>
			<% if current_user.errors.any? %>
				<% current_user.errors.full_messages.each do |mess| %>
					<%= mess %>
				<% end %>
			<% end %>
			<div class="input-group input_group">
				<label class="col-lg-2">Name</label>
				<div class="col-lg-10">
					<%= f.text_field :name, required: true, class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-lg-2">Avatar</label>
				<div class="col-lg-10">
					<%= f.filestack_field :avatar, 'Upload your avatar', class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-lg-2">Cover photo</label>
				<div class="col-lg-10">
					<%= f.filestack_field :cover_photo, 'Upload your cover photo', class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-lg-2">Color</label>
				<div class="col-lg-10">
					<%= f.color_field :color, class: "form-control" %><br/><br/>
				</div>
			</div>
			<div class="input-group input_group">
				<label class="col-lg-2">Email</label>
				<div class="col-lg-10">
					<%= f.email_field :email, required: true, class: "form-control" %><br/><br/>
				</div>
			</div>
			<%= f.submit "Update Profile", class: "btn btn-primary update_profile" %>
		<% end %>
	</div>
</div>