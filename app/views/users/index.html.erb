<dir class="container">
	<h2>All User</h2>
	<% @users.each do |user| %>
		<div class="row">
			<dir class="col-xs-1">
				<img src="<%= user.avatar %>" alt="user_avatar" style="width: 40px; height: 40px" />
			</dir>
			<dir class="col-xs-2">
				<%= user.name %>
			</dir>
			<% if !current_user.is_friend?(user) %>
				<dir class="col-xs-2">
					<%= link_to "Send friend request", friend_request_path(user), method: :post, class: "btn btn-primary login" %>
				</dir>
			<% end %>
		</div>
	<% end %>
</dir>