<div class="row">
	<div class="col-xs-1"></div>
	<div class="col-xs-9">
		<%= form_for ([@post, @post.comments.build]) do |f| %>
			<div class="form-group">
				<%= f.text_field :content, required: true, class: "form-control", placeholder: "Write your comment..." %>
			</div>
			<%= f.submit %>
		<% end %>
	</div>
</div>