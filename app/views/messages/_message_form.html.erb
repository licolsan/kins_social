<%= form_for(@message, remote: true) do |f| %>
	<%= f.text_area :content, placeholder: "Send your message", required:true, id: "message_content", class: "form-control" %>
	<%= f.hidden_field :channel_id, value: @channel.id, id: "channel_id" %>
	<%= f.submit "Send message", class: "btn btn-sm btn-success" %>
<% end %>