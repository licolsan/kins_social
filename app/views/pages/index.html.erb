<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-10 well">
    <%= render :partial => 'posts/form' %>
  </div>
  <div class="col-xs-1"></div>
</div>
<% for @p in @posts %>
  <% if current_user.is_following?(@p.user) || current_user == @p.user %>
    <div class="card post-panel row">
      <div class="col-xs-1"></div>
      <div class="col-xs-10 well">
        <div class="col-sm-2">
        <%= image_tag @p.user.avatar, alt: "user_avatar", class: "img-circle avatar_post" %>
        </div>
        <div class="col-sm-10">
        	<span><%= @p.user.name %></span>
        	<span>- <%= @p.created_at.to_formatted_s(:short) %></span>
          <% if @p.user == current_user %>
            <div class="edit_delete_post">
              <%= link_to "edit", edit_post_path(@p) %> | <%= link_to "delete", post_path(@p), method: :delete, data: {confirm: "Are you sure to delete this post?"} %>
            </div>
          <% end %>
          <h3 class="post_title"><%= @p.title %></h3>
          <p class="post_content"><%= @p.content %></p>
        </div>
        <div class="col-sm-12">
          <p class="post-links">
            <span class="fa fa-share-alt-square g-links" aria-hidden="true" name="share"></span>
            <span class="fa fa-toggle-down g-links" aria-hidden="true" name="down"></span>
            <span class="fa fa-toggle-up g-links" aria-hidden="true" name="up"></span>
            <span class=" fa fa-comments-o g-links" aria-hidden="true" name="comment"></span>
          </p>
        </div>
      </div>
      <div class="col-xs-1"></div>
    </div>
  <% end %>
<% end %>
